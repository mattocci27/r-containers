{
  "owner": "mattocci",
  "version": "4.5.1",
  "arches": ["amd64", "arm64"],
  "images": [
    {
      "name": "radian",
      "baseImage": "rocker/rstudio:{version}",
      "radian": true,
      "vscodeRenv": true,
      "systemPackages": [
        "libcairo2-dev",
        "libcurl4-openssl-dev",
        "libglpk-dev",
        "libxml2-dev",
        "libzmq3-dev",
        "libfontconfig1-dev",
        "libharfbuzz-dev",
        "libfribidi-dev",
        "libfreetype6-dev",
        "libpng-dev",
        "libtiff5-dev",
        "libjpeg-dev",
        "libgit2-dev",
        "libxt6",
        "python3-venv",
        "python3-dev",
        "python3-pip",
        "pipx",
        "cmake"
      ],
      "installCRAN": [
        "remotes",
        "renv",
        "devtools",
        "yaml",
        "languageserver"
      ],
      "installGithub": [
        "nx10/unigd",
        "nx10/httpgd"
      ]
    },
    {
      "name": "radian-verse",
      "baseImage": "mattocci/radian:{version}_{arch}",
      "tinytex": true,
      "quarto": true,
      "updateLatex": true,
      "quartoVer": {"amd64": "1.7.32", "arm64": "1.7.32"},
      "systemPackages": [
        "libnode-dev",
        "libudunits2-dev",
        "gdal-bin",
        "lbzip2",
        "libfftw3-dev",
        "libgdal-dev",
        "libgeos-dev",
        "libgsl0-dev",
        "libgl1-mesa-dev",
        "libglu1-mesa-dev",
        "libhdf4-alt-dev",
        "libhdf5-dev",
        "libjq-dev",
        "libpq-dev",
        "libproj-dev",
        "libprotobuf-dev",
        "libnetcdf-dev",
        "libsqlite3-dev",
        "libssl-dev",
        "netcdf-bin",
        "postgis",
        "protobuf-compiler",
        "sqlite3",
        "tk-dev",
        "unixodbc-dev"
      ]
    },
    {
      "name": "radian-zsh",
      "baseImage": "mattocci/radian-verse:{version}_{arch}",
      "zsh": true
    },
    {
      "name": "radian-ai",
      "baseImage": "mattocci/radian-zsh:{version}_{arch}",
      "ai": true
    },
    {
      "name": "cmdstan-verse",
      "baseImage": "mattocci/radian-verse:{version}_{arch}",
      "cmdstan": true,
      "cmdstanVer": "2.36.0",
      "systemPackages": [
        "build-essential"
      ]
    },
    {
      "name": "cmdstan-zsh",
      "baseImage": "mattocci/radian-zsh:{version}_{arch}",
      "cmdstan": true,
      "cmdstanVer": "2.36.0",
      "systemPackages": [
        "build-essential"
      ]
    },
    {
      "name": "cmdstan-ai",
      "baseImage": "mattocci/cmdstan-zsh:{version}_{arch}",
      "ai": true
    }
  ]
}
